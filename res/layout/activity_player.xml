<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/la"
    tools:context=".Player" >

    <Button
        android:id="@+id/btFF"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:layout_toLeftOf="@+id/btNxt"
        android:text=">>" />

    <Button
        android:id="@+id/btNxt"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btFF"
        android:layout_alignBottom="@+id/btFF"
        android:layout_alignRight="@+id/seekBar"
        android:text=">|" />

    <Button
        android:id="@+id/btPlay"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/btFF"
        android:layout_centerHorizontal="true"
        android:text="||" />

    <Button
        android:id="@+id/btFB"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btPlay"
        android:layout_toRightOf="@+id/btPv"
        android:text="&lt;&lt;" />

    <Button
        android:id="@+id/btPv"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seekBar"
        android:layout_below="@+id/seekBar"
        android:text="|&lt;" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:layout_toRightOf="@+id/btPv"
        android:gravity="center|fill_horizontal"
        android:text="Medium Text"
        android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

</RelativeLayout>
